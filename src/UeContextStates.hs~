{-# LANGUAGE DeriveGeneric #-}
module UeContextStates
       ( UeContext_eNB (..)
       , UeContext_mme (..)
       , UeContext_ue (..)
       , RRCState (..)
       ) where

data UeContext_eNB = UeContext_eNB{
  rrcState :: RRCState,
  c_rnti :: !Int,
  imsi :: !String,
  srbIdentity :: !Int,
  eNBUES1APid :: !Int,
  ratCapabilities :: [(RAT,Bool)],
  securityKey :: !Int,
  epsBearerId :: !Int  
  }

data RRCState =
    RRC_Idle
  | RRC_Connected

data UeContext_mme = UeContext_mme{
  mmeUES1APid :: !Int,
  securityKey :: !Int
  }

data UeContext_ue = UeContext_ue{
  imsi :: !String,
  securityKey :: !Int,
  srbId :: !Int
  }

                     
